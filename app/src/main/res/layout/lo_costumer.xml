<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/textView"
        android:layout_width="105dp"
        android:layout_height="19dp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/black"
        android:text="Nama Pemilik"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="105dp"
        android:textColor="@android:color/black"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:text="Umur Hewan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/txtCustomerName"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginStart="40dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="20dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtPetAge"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:textColor="@android:color/black"
        android:maxLines="1"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/txtCustomerName" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="83dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bulat"
        android:text="Update"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="83dp"
        android:layout_height="35dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bulat"
        android:text="Delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnUpdate" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="410dp"
        android:layout_height="2dp"
        android:layout_marginTop="210dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/garis_pembatas" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="105dp"
        android:layout_height="20dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"
        android:text="Nama Hewan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="105dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"
        android:text="Jenis Hewan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="105dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"
        android:text="Alamat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/txtPetName"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/txtPetAge" />

    <TextView
        android:id="@+id/txtPetType"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:textColor="@android:color/black"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/txtPetName" />

    <TextView
        android:id="@+id/txtAddress"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:textColor="@android:color/black"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/txtPetType" />
</androidx.constraintlayout.widget.ConstraintLayout>